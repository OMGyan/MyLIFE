<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="6dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_max"
                android:scaleType="centerCrop"
                android:layout_width="180dp"
                android:layout_height="120dp" />
            <ImageView
                android:background="#4000"
                android:layout_width="180dp"
                android:layout_height="120dp" />
            <LinearLayout
                android:layout_below="@id/iv_max"
                android:layout_width="180dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_smalllogo"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv_title"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="- 有家研究所 -"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_sub_title"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:text="一家专注于“家”的研究所"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_count"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:text="71篇攻略"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_alignBottom="@id/iv_max"
                android:layout_centerHorizontal="true"
                android:layout_width="80dp"
                android:layout_marginBottom="-45dp"
                android:layout_height="80sp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circle"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <org.lenve.customshapeimageview.CustomShapeImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_biglogo"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/test44"
                    app:shape="circle"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tv_logo_title"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:gravity="center|top"
                    android:text="利物"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>